{
  "name": "obsidian-operator",
  "version": "0.0.1",
  "description": "An Obsidian plugin for safe, hands-free voice-driven transcription and editing",
  "main": "main.js",
  "scripts": {
    "dev": "bun run build.ts --watch",
    "build": "tsc -noEmit -skipLibCheck && bun run build.ts --production",
    "test": "bun test",
    "test:watch": "bun test --watch", 
    "lint": "biome check .",
    "format": "biome format --write .",
    "lint:fix": "biome check --apply .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["obsidian", "plugin", "voice", "transcription"],
  "author": "Karl M Davis",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.3",
    "@happy-dom/global-registrator": "^15.11.4",
    "builtin-modules": "^5.0.0",
    "esbuild": "^0.25.0",
    "obsidian": "latest",
    "typescript": "^5.8.3"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
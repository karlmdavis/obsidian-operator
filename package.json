{
  "name": "obsidian-operator",
  "version": "0.0.1",
  "description": "An Obsidian plugin for safe, hands-free voice-driven transcription and editing",
  "main": "main.js",
  "scripts": {
    "dev": "bun run build.ts --watch",
    "build": "bun run build.ts --production",
    "test": "bun test",
    "test:watch": "bun test --watch",
    
    "// Coverage Scripts": "",
    "test:coverage": "bun test --coverage --coverage-dir=./coverage",
    "test:coverage:text": "bun test --coverage --coverage-reporter=text",
    "test:coverage:lcov": "bun test --coverage --coverage-reporter=lcov --coverage-dir=./coverage",
    
    
    "// Coverage Analysis": "",
    "coverage:diff": "bun run coverage:changed-files",
    "coverage:changed-files": "git diff --name-only HEAD~1 | grep -E '\\.(ts|js)$' | xargs bun test --coverage --coverage-include",
    
    "// Development Workflow": "",
    "lint": "biome check .",
    "format": "biome format --write .",
    "lint:fix": "biome check --apply .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    
    "// CI/CD Pipeline": "",
    "ci:coverage": "bun run test:coverage:lcov",
    "ci:quality": "bun run lint && bun run typecheck && bun run ci:coverage",
    
    "// Pre-commit Hooks": "",
    "pre-commit": "bun run lint && bun run typecheck && bun test"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "voice",
    "transcription"
  ],
  "author": "Karl M Davis",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@happy-dom/global-registrator": "^15.11.4",
    "@types/bun": "1.2.21",
    "@types/node": "^22.15.3",
    "builtin-modules": "^5.0.0",
    "esbuild": "^0.25.0",
    "husky": "9.1.7",
    "obsidian": "latest",
    "typescript": "^5.8.3"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}

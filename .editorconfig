# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
# Preserve trailing whitespace in Markdown for line breaks
trim_trailing_whitespace = false
# One sentence per line convention
max_line_length = 110

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[{package.json,package-lock.json}]
indent_size = 2